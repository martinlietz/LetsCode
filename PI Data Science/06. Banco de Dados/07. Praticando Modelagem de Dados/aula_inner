--Obtenha uma tabela que contenha o id do pedido e o valor total do mesmo.

WITH 
tabela_1 as (
SELECT DISTINCT ON (order_details.order_id) order_details.order_id, SUM((products.unit_price * order_details.quantity * (1-order_details.discount))) + AVG(orders.freight) AS valor_total
	FROM order_details 
	inner join orders on order_details.order_id = orders.order_id
	inner join products on order_details.product_id = products.product_id
GROUP BY 1
)
SELECT * FROM tabela_1



-- Obtenha uma lista dos 10 clientes que realizaram o maior número de pedidos,
--bem como o número de pedidos de cada, ordenados em ordem decrescente de nº de pedidos.


SELECT DISTINCT ON (customers.customer_id) customers.customer_id,customers.company_name, count(orders.order_id) AS qtd_pedidos
	FROM customers 
	inner join orders on customers.customer_id = orders.customer_id
GROUP BY customers.customer_id, customers.company_name
ORDER BY 3 DESC
LIMIT 10

SELECT clientes.customer_id as "Id_Cliente", clientes.company_name as "Nome_Cliente", COUNT(pedido.customer_id) as "Nº_Pedidos" FROM orders pedido
INNER JOIN customers clientes ON clientes.customer_id = pedido.customer_id
GROUP BY clientes.customer_id, clientes.contact_name
ORDER BY "Nº_Pedidos" desc
LIMIT 10


SELECT * FROM ORDERS
SELECT * FROM CUSTOMERS


--Obtenha uma tabela que contenha o id e o valor total do pedido e o nome do cliente que o realizou.



SELECT DISTINCT order_details.order_id, customers.company_name, SUM((products.unit_price * order_details.quantity * (1-order_details.discount))) + AVG(orders.freight) AS valor_total
	FROM order_details 
	inner join orders on order_details.order_id = orders.order_id
	inner join products on order_details.product_id = products.product_id
	inner join customers on customers.customer_id = orders.customer_id
GROUP BY 1, 2
order by valor_total desc




---Obtenha uma tabela que contenha o país do cliente e o valor da compra que ele realizou.

SELECT DISTINCT order_details.order_id, customers.country,customers.company_name, SUM((products.unit_price * order_details.quantity * (1-order_details.discount))) + AVG(orders.freight) AS valor_total
	FROM order_details 
	inner join orders on order_details.order_id = orders.order_id
	inner join products on order_details.product_id = products.product_id
	inner join customers on customers.customer_id = orders.customer_id
GROUP BY 1, 2, 3
order by valor_total desc




--Obtenha uma tabela que contenha uma lista dos países dos clientes
--e o valor total de compras realizadas em cada um dos países.
--Ordene a tabela, na order descrescente, considerando o valor total de compras realizadas por país.

SELECT DISTINCT customers.country, SUM((products.unit_price * order_details.quantity * (1-order_details.discount))) + AVG(orders.freight) AS valor_total
	FROM order_details 
	inner join orders on order_details.order_id = orders.order_id
	inner join products on order_details.product_id = products.product_id
	inner join customers on customers.customer_id = orders.customer_id
GROUP BY 1
order by valor_total desc

--Obtenha uma tabela com o valor médio das vendas em cada mês (ordenados do mês com mais vendas para o mês com menos vendas).

SELECT DISTINCT to_char(orders.order_date, 'MM') as "Mês", (SUM(products.unit_price * order_details.quantity * (1-order_details.discount)) + AVG(orders.freight))/ COUNT(orders.order_id) AS media
	FROM order_details 
	inner join orders on order_details.order_id = orders.order_id
	inner join products on order_details.product_id = products.product_id
	--inner join customers on customers.customer_id = orders.customer_id
GROUP BY 1
order by media desc

select * from orders

